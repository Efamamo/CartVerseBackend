<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <div class="loader"></div>
    <div id="app">
      <div class="main-wrapper main-wrapper-1">
        <%- include("../partials/nav.ejs") %> <%-
        include("../partials/side_bar.ejs") %>

        <div class="main-content">
          <section class="section">
            <div class="section-header">
              <h1>User Profile</h1>
            </div>

            <div class="section-body">
              <div class="row">
                <!-- User Information Card -->
                <div class="col-12 col-md-6 col-lg-6">
                  <div class="card">
                    <div class="card-header">
                      <h4>User Information</h4>
                    </div>
                    <div class="card-body">
                      <div class="form-group">
                        <label>First Name</label>
                        <p class="form-control-plaintext">
                          <%= user.first_name || 'N/A' %>
                        </p>
                      </div>
                      <div class="form-group">
                        <label>Last Name</label>
                        <p class="form-control-plaintext">
                          <%= user.last_name || 'N/A' %>
                        </p>
                      </div>
                      <div class="form-group">
                        <label>Phone Number</label>
                        <p class="form-control-plaintext">
                          <%= user.phone_number || 'N/A' %>
                        </p>
                      </div>
                      <div class="form-group">
                        <label>Email Address</label>
                        <p class="form-control-plaintext">
                          <%= user.email_address || 'N/A' %>
                        </p>
                      </div>
                      <div class="form-group">
                        <label>Roles</label>
                        <ul>
                          <% if (user.roles && user.roles.length > 0) { %> <%
                          user.roles.forEach(role => { %>
                          <li><%= role.role_name || 'N/A' %></li>
                          <% }); %> <% } else { %>
                           
                          <p class="form-control-plaintext">
                            <%= user.is_superuser ? 'All Roles Assigned' : "No roles assigned"%>
                          </p>
                          <% } %>
                        </ul>
                      </div>
                      <div class="form-group">
                        <label>Is Super Admin</label>
                        <p class="form-control-plaintext">
                          <%= user.is_superuser ? 'Yes' : 'No' %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>

               
            </div>
          </section>
        </div>

        <%- include("../partials/settings.ejs") %> <%-
        include('../partials/footer.ejs') %>
      </div>
    </div>

    <!-- General JS Scripts -->
    <script src="/js/app.min.js"></script>
    <!-- JS Libraries -->
    <script src="/bundles/apexcharts/apexcharts.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="/js/page/index.js"></script>
    <!-- Template JS File -->
    <script src="/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="/js/custom.js"></script>
  </body>
</html>
