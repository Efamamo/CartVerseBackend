<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <div class="loader"></div>
    <div id="app">
      <div class="main-wrapper main-wrapper-1">
        <%- include("../partials/nav.ejs") %> <%-
        include("../partials/side_bar.ejs") %>
        <section class="section mt-10 md:mt-40">
          <div class="card col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-5 offset-xl-4">
            <div class="card-footer text-end">
              <a
                href="/dashboard/admins/add"
                class="btn btn-primary float-right veiwbutton"
                >Add New</a
              >
            </div>
            <div class="card-body">
              <h4 class="card-title float-right">Admins Lists</h4>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="advance-1">
                  <thead class="thead-dark">
                    <tr>
                      <th>ID</th>
                      <th>Admin Name</th>
                      <th>Created At</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let index = 1; %>
                    <% for (let admin of admins) { %>
                      <tr>
                        <td><%= index %></td>
                        <td><%= admin.first_name%> <%= admin.last_name%></td>
                        <td><%= new Date(admin.createdAt).toLocaleString() %></td>
                        <% if (!admin.is_superuser) {%>
                        <td class="text-center">
                          <a 
                            class="btn btn-success btn-sm" 
                            href="/dashboard/admins/<%= admin._id %>/edit"
                          >
                            <i class="fas fa-pencil-alt"></i> Edit
                          </a>
                        </td>
                        <td class="text-center">
                          <a 
                            class="btn btn-danger btn-sm" 
                            href="/dashboard/admins/<%= admin._id %>/delete"
                             onclick="return confirm('Are you sure you want to delete this user?');"
                          >
                            <i class="fas fa-trash"></i> Remove
                          </a>
                        </td>
                        <% } else{ %>
                          <td></td>
                          <td></td>
                          <% } %>
                      </tr>
                      <% index++; %>
                    <% } %>
                  </tbody>
                </table>
              </div>
              
              </div>
            </div>
          </div>
        </section>
      </div>

      <%- include("../partials/settings.ejs") %> <%-
      include('../partials/footer.ejs') %>
    </div>

    <!-- General JS Scripts -->
    <script src="/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="/bundles/apexcharts/apexcharts.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="/js/page/index.js"></script>
    <!-- Template JS File -->
    <script src="/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="/js/custom.js"></script>
  </body>
</html>
