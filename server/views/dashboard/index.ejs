                    <div class="card-body">
                      <div id="piechart2" class="chartsh"></div>
                    </div>
                  </div>
                </div>

                <!-- Third Pie Chart -->
                <div class="col-12 col-sm-12 col-lg-4">
                  <div class="card">
                    <div class="card-body pt-4 mt-3">
                      <div id="barchart2" class="chartsh"></div>
                    </div>
                  </div>
                </div>
              </div>
