<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="loader"></div>
    <div id="app">
      <div class="main-wrapper main-wrapper-1">
        <%- include("./partials/nav.ejs") %> <%-
        include("./partials/side_bar.ejs") %>
        <section class="section mt-10 md:mt-40">
          <div class="container mt-5">
            <div class="row">
              <div
                class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4"
              >
                <div class="card card-primary">
                  <div class="card-header">
                    <h4>Add Category</h4>
                  </div>
                  <div class="card-body">
                    <form
                      method="GET"
                      action="/"
                      class="needs-validation"
                      novalidate=""
                    >
                      <div class="form-group">
                        <label for="email">Category Name English</label>
                        <input
                          id="english_category"
                          type="text"
                          class="form-control"
                          name="english_category"
                          tabindex="1"
                          required
                          autofocus
                        />
                        <div class="invalid-feedback">
                          Please fill in english category name
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="d-block">
                          <label for="password" class="control-label"
                            >Category Name Amharic</label
                          >
                        </div>
                        <input
                          id="amharic_category"
                          type="text"
                          class="form-control"
                          name="amharic_category"
                          tabindex="2"
                          required
                        />
                        <div class="invalid-feedback">
                          please enter amharic category name
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="d-block">
                          <label for="password" class="control-label"
                            >Note</label
                          >
                        </div>
                        <textarea
                          id="note"
                          class="form-control"
                          name="note"
                          tabindex="3"
                        ></textarea>
                      </div>
                      <div class="form-group">
                        <button
                          type="submit"
                          class="btn btn-primary btn-lg btn-block"
                          tabindex="4"
                        >
                          Submit
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <%- include("./partials/settings.ejs") %>
      </div>
    </div>

    <!-- General JS Scripts -->
    <script src="/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="/bundles/apexcharts/apexcharts.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="/js/page/index.js"></script>
    <!-- Template JS File -->
    <script src="/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="/js/custom.js"></script>
  </body>
</html>
