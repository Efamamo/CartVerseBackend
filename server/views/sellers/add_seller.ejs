<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <div class="loader"></div>
    <div id="app">
      <div class="main-wrapper main-wrapper-1">
        <%- include("../partials/nav.ejs") %> <%-
        include("../partials/side_bar.ejs") %>
      </div>

      <section class="section mt-10 md:mt-40">
        <div class="container mt-5">
          <div class="row">
            <div
              class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4"
            >
              <div class="card card-primary">
                <div class="card-header">
                  <h4>Add Seller</h4>
                </div>
                <div class="card-body">
                  <form
                    method="GET"
                    action="/"
                    class="needs-validation"
                    novalidate=""
                  >
                    <div class="form-group">
                      <label for="email">Seller Name</label>
                      <input
                        id="text"
                        type="text"
                        class="form-control"
                        name="text"
                        tabindex="1"
                        required
                        autofocus
                      />
                      <div class="invalid-feedback">
                        Please fill in seller name
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="d-block">
                        <label for="password" class="control-label"
                          >Image</label
                        >
                      </div>
                      <input
                        id="image"
                        type="file"
                        class="form-control"
                        name="image"
                        tabindex="2"
                        required
                      />
                      <div class="invalid-feedback">please select image</div>
                    </div>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox">
                        <input
                          type="checkbox"
                          name="remember"
                          class="custom-control-input"
                          tabindex="3"
                          id="remember-me"
                        />
                        <label class="custom-control-label" for="remember-me"
                          >To be recommended on home page</label
                        >
                      </div>
                    </div>
                    <div class="form-group">
                      <button
                        type="submit"
                        class="btn btn-primary btn-lg btn-block"
                        tabindex="4"
                      >
                        Submit
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <%- include("../partials/settings.ejs") %> <%-
      include("../partials/footer.ejs") %>
    </div>

    <!-- General JS Scripts -->
    <script src="/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="/bundles/apexcharts/apexcharts.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="/js/page/index.js"></script>
    <!-- Template JS File -->
    <script src="/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="/js/custom.js"></script>
  </body>
</html>
